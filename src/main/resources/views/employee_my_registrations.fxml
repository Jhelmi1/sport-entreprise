<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.controllers.EmployeeMyRegistrationsController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Mes inscriptions" style="-fx-font-size: 20;" />

    <TableView fx:id="tableView" prefHeight="400">
        <columns>
            <TableColumn fx:id="colEventId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colSport" text="Sport" prefWidth="120"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colLocation" text="Lieu" prefWidth="150"/>
            <TableColumn fx:id="colRegStatus" text="Statut inscription" prefWidth="160"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Annuler inscription" onAction="#onCancel"/>
        <Button text="Retour" onAction="#onBack"/>
    </HBox>

</VBox>
